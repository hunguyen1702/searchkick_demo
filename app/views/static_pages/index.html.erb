<div ng-app="app" class="container">
  <div ng-controller="PostsController" class="row">
    <div class="col-md-8">
      <div ng-if="error">
        <div class="alert alert-danger">
          <p ng-bind="error"></p>
        </div>
      </div>
      <div ng-if="suggestions.length">
        <%= render "suggestion" %>
      </div>
      <h1 class="my-4">
        <%= t "post.all_posts" %>
      </h1>
      <!-- <ul> -->
        <!-- <li ng-repeat="post in posts track by $index" ng-bind="post.title"></li> -->
      <%= render "post" %>
      <!-- </ul> -->
    </div>
  </div>
</div>
